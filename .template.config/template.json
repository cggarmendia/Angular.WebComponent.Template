{
    "$schema": "http://json.schemastore.org/template",
    "author": "Claudio",
    "classifications": ["Angular"],
    "name": "Angular.WebComponent.Template",
    "identity": "Angular.WebComponent.Template",    
    "shortName": "Angular.WebComponent.Template",
    "tags": {
        "language": "Angular",
        "type": "project"
    },
    "preferNameDirectory": true,
    "symbols": {
        "componentName": {
            "type": "parameter",
            "datatype": "string",
            "isRequired": true,
            "replaces": "Template-XXX",
            "fileRename": "angular*.json"
        },
		"packageName": {
            "type": "parameter",
            "datatype": "string",
            "isRequired": true,
            "replaces": "template-xxx",
            "fileRename": "package*.json"
        }
    },
    "sources": [{
            "include": ["**"],
            "exclude": ["**/package/**","**/node_modules/**","**/_rels/**", "**/.git/**", "**/dist/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json", "**/*.nuspec"]
        }
    ]
}